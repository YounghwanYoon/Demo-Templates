<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".blank">
    <ListView
            android:id="@+id/lists"
            android:layout_width="299dp"
            android:layout_height="285dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/id"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent">

    </ListView>
    <TextView
            android:text="ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="PW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pw"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/id" app:layout_constraintTop_toTopOf="@+id/UniID"
            app:layout_constraintStart_toEndOf="@+id/id" android:layout_marginStart="8dp"/>
    <TextView
            android:text="UniID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/UniID" app:layout_constraintEnd_toStartOf="@+id/id" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/id"
            app:layout_constraintBottom_toBottomOf="@+id/id" app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>